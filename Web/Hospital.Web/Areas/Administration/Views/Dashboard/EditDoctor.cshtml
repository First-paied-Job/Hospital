﻿@using Hospital.Web.ViewModels.Administration.Dashboard.Doctor;

@model EditDoctorViewModel

<div class="row">
    <div class="jumbotron col-md-12">
        <div class="bg-contact2">
            <div class="container-contact2">
                <div class="wrap-contact2">
                    <form class="contact2-form validate-form" asp-area="Administration" asp-controller="Dashboard" asp-action="EditDoctorPost">
                        <span class="contact2-form-title">
                            Edit Doctor
                        </span>

                        <div class="wrap-input2 validate-input" data-validate="FullName is required">
                            <label asp-for="FullName" style="color: black;"></label>
                            <input asp-for="FullName" class="input2" value="@Model.FullName">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Adress" class="suls-text-color">Address</label>
                            <input asp-for="Adress" class="form-control" placeholder="@Model.Adress">
                            <span asp-validation-for="Adress" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Qualification" class="suls-text-color">Qualification</label>
                            <textarea asp-for="Qualification" class="form-control" cols="30" rows="5" placeholder="Qualification...">@Model.Qualification</textarea>
                            <span asp-validation-for="Qualification" class="text-danger"></span>
                        </div>

                        <input asp-for="DoctorId" class="hide" hidden="hidden" value="@Model.DoctorId">

                        <div class="container-contact2-form-btn">
                            <div class="wrap-contact2-form-btn">
                                <div class="contact2-form-bgbtn"></div>
                                <button type="submit" class="contact2-form-btn">EDIT</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>