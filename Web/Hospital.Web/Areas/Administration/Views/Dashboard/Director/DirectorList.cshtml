﻿@using Hospital.Web.ViewModels.Administration.Dashboard.Director;

@model ICollection<DirectorViewModel>

<main class="mt-3">
    @if (Model.Count == 0)
    {
        <h1 class="text-center suls-text-color">There are no directors at the moment!</h1>
    }
    else
    {
        <h1 class="text-center suls-text-color">Current directors</h1>
        @foreach (DirectorViewModel director in Model)
        {
            <div>
                <p>Director's name - @director.FullName</p>
                <p>Address - @director.Adress</p>
                <div>
                    <a href="/Administration/Dashboard/RemoveDirector?directorId=@director.DirectorId" class="btn forum-go-back-btn text-uppercase">Remove Director</a>
                </div>
                <div>
                    <a href="/Administration/Dashboard/EditDirector?directorId=@director.DirectorId" class="btn forum-go-back-btn text-uppercase">Edit Director</a>
                </div>
            </div>
        }
    }
    
</main>