﻿@using Hospital.Web.ViewModels.Administration.Dashboard.Statistics;

@model ICollection<DepartmentsViewModel>

<main class="mt-3">
    @if (Model.Count == 0)
    {
        <h1 class="text-center suls-text-color">There are no doctors at the moment!</h1>
    }
    else
    {
        <h1 class="text-center suls-text-color">Current departments</h1>
        @foreach (DepartmentsViewModel department in Model)
        {
            <div>
                <h3>Department Name - @department.Name</h3>
                @if (department.Doctors.Count > 0)
                {
                    <h3>List of doctors: </h3>
                    @foreach (var doctor in department.Doctors)
                    {
                        <p>* @doctor.Name</p>
                    }
                }
                else
                {
                    <p>No doctors in @department.Name</p>
                }
            </div>
        }
    }
</main>