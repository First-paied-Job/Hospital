@using Hospital.Web.ViewModels.Doctors.Room

@model ICollection<RoomInDepartment>
<main class="mt-3">
    @if (Model.Count == 0)
    {
        <h1 class="text-center suls-text-color">There are no rooms in this department at the moment!</h1>
    }
    else
    {
        <h1 class="text-center suls-text-color">Current Rooms</h1>
        @foreach (RoomInDepartment room in Model)
        {
            <div>
                <h2>@room.RoomName is a @room.RoomType room</h2>
                @foreach (PatientDTO patient in room.Patients)
                {
                    <h3>Patient name - @patient.FullName</h3>
                    <div>
                        <a href="/Doctor/Dashboard/PatientInfo?patientId=@patient.PatientId" class="btn forum-go-back-btn text-uppercase">Get information about this patient</a>
                    </div>
                    <div>
                        <a href="/Doctor/Dashboard/RemovePatientFromRoom?patientId=@patient.PatientId&roomId=@room.RoomId" class="btn forum-go-back-btn text-uppercase">Remove this patient from this room</a>
                    </div>
                }
                <div>
                    <a href="/Doctor/Dashboard/AddPatientToRoom?roomId=@room.RoomId" class="btn forum-go-back-btn text-uppercase">Add patient to this room</a>
                </div>
            </div>
        }
    }
</main>