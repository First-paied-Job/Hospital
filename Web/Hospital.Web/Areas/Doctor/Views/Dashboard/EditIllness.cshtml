﻿@using Hospital.Web.ViewModels.Doctors.Patient;

@model EditIllnessViewModel

<div class="row">
    <div class="jumbotron col-md-12">
        <div class="bg-contact2">
            <div class="container-contact2">
                <div class="wrap-contact2">
                    <form class="contact2-form validate-form" asp-area="Doctor" asp-controller="Dashboard" asp-action="EditIllnessPost">
                        <span class="contact2-form-title">
                            Edit Patient
                        </span>

                        <div class="form-group">
                            <label asp-for="Name" class="suls-text-color">Name</label>
                            <input asp-for="Name" class="form-control" value="@Model.Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CureMethod" class="suls-text-color">Cure Method</label>
                            <input asp-for="CureMethod" class="form-control" value="@Model.CureMethod">
                            <span asp-validation-for="CureMethod" class="text-danger"></span>
                        </div>

                        <input asp-for="Id" class="hide" hidden="hidden" value="@Model.Id">

                        <div class="container-contact2-form-btn">
                            <div class="wrap-contact2-form-btn">
                                <div class="contact2-form-bgbtn"></div>
                                <button type="submit" class="contact2-form-btn">EDIT</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>