﻿@using Hospital.Web.ViewModels.Doctors.Room;

@model AddPatientToRoomInput

@foreach (var modelState in ViewData.ModelState.Values)
{
    foreach (var error in modelState.Errors)
    {
        <p class="error-message">@error.ErrorMessage</p>
    }
}

<div class="row">
    <div class="jumbotron col-md-12">
        <div class="heading-container bottom-buffer-md">
            <h1>Here you can add a patient!</h1>
        </div>

        <form class="mx-auto half-width col-5" method="post" asp-area="Doctor" asp-controller="Dashboard" asp-action="AddPatientToRoom">
            <div class="top-border-line primary-separator"></div>

            <div class="form-group">
                <label asp-for="PatientEmail" class="suls-text-color">Email of the user you want to make a patient</label>
                <input asp-for="PatientEmail" class="form-control" placeholder="Email...">
                <span asp-validation-for="PatientEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FullName" class="suls-text-color">Patient's full name</label>
                <input asp-for="FullName" class="form-control" placeholder="FullName...">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="suls-text-color">Patient's Address</label>
                <input asp-for="Address" class="form-control" placeholder="Address...">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="suls-text-color">Phone number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number...">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DayStayCount" class="suls-text-color">DayStayCount</label>
                <input asp-for="DayStayCount" type="number" class="form-control" placeholder="1, 2, 3...">
                <span asp-validation-for="DayStayCount" class="text-danger"></span>
            </div>

            <div>
                <p>
                    Price per day: 10$
                </p>
            </div>

            @if (ViewBag.doctorId != null)
            {
                <input asp-for="DoctorId" class="hide" hidden="hidden" value="@ViewBag.doctorId">
            }
            else
            {
                <input asp-for="DoctorId" class="hide" hidden="hidden" value="@Model.DoctorId">
            }


            @if (ViewBag.roomId != null)
            {
                <input asp-for="RoomId" class="hide" hidden="hidden" value="@ViewBag.roomId">
            }
            else
            {
                <input asp-for="RoomId" class="hide" hidden="hidden" value="@Model.RoomId">
            }

            <div class="top-border-line primary-separator"></div>

            <button type="submit" class="btn forum-add-bg-color">Add this person as a patient</button>
        </form>
    </div>
</div>