﻿@using Hospital.Web.ViewModels.Doctors.Patient;

@model EditPatientViewModel

<div class="row">
    <div class="jumbotron col-md-12">
        <div class="bg-contact2">
            <div class="container-contact2">
                <div class="wrap-contact2">
                    <form class="contact2-form validate-form" asp-area="Doctor" asp-controller="Dashboard" asp-action="EditPatientPost">
                        <span class="contact2-form-title">
                            Edit Patient
                        </span>

                        <div class="wrap-input2 validate-input" data-validate="Fullname is required">
                            <label asp-for="FullName" style="color: black;"></label>
                            <input asp-for="FullName" class="input2" value="@Model.FullName">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="suls-text-color">Address</label>
                            <input asp-for="Address" class="form-control" value="@Model.Address">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="suls-text-color">Phone number</label>
                            <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DayStayCount" class="suls-text-color">DayStayCount</label>
                            <input asp-for="DayStayCount" type="number" class="form-control" value="@Model.DayStayCount">
                            <span asp-validation-for="DayStayCount" class="text-danger"></span>
                        </div>

                        <input asp-for="PatientId" class="hide" hidden="hidden" value="@Model.PatientId">

                        <div class="container-contact2-form-btn">
                            <div class="wrap-contact2-form-btn">
                                <div class="contact2-form-bgbtn"></div>
                                <button type="submit" class="contact2-form-btn">EDIT</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>